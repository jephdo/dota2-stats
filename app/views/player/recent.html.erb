<div>

    <h1>Player#overview</h1>
    <p>Find me in app/views/player/overview.html.erb</p>


    <% @matches.each do |match| %>
    <h3>Match <strong><%= match[:id] %></strong></h3> 
        <span style="color:gray"><i><%= distance_of_time_in_words_to_now(Time.at(match[:start].to_i)) %> ago</i></span>
        <table class="table table-bordered">
            <tr>
                <td colspan="3">The Radiant</td>
            </tr>
            <tr>
                <th>Player Slot</th>
                <th>Player ID</th>
                <th>Hero ID</th>
            </tr>
            <% match[:radiant].each do |player| %>
                <tr>
                    <td><%= player['player_slot'] %></td>
                    <td><%= player['account_id'] %></td>
                    <td><%= player['hero_id'] %> </td>
                </tr>
            <% end %>


            <tr>
                <td colspan="3">The Dire</td>
            </tr>
            <tr>
                <th>Player Slot</th>
                <th>Player ID</th>
                <th>Hero ID</th>
            </tr>
            <% match[:dire].each do |player| %>
                <tr>
                    <td><%= player['player_slot'] %></td>
                    <td><%= player['account_id'] %></td>
                    <td><%= player['hero_id'] %> </td>
                </tr>
            <% end %>
        </table>
    <% end %>
</div>
